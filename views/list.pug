doctype html
html(lang = 'en')
    head
        title = To Do List
        include bootstrapIncludes.pug
    body
        div.container
            div.row
                div.col-11.align-self-start
                    h1 To Do
                div.col-1.align-self-end
                    a.btn.btn-primary.align-middle(href = "/addTask") New Task
            div.table-responsive
                table.table
                    thead
                        tr
                            th(scope = "col") Name
                            th(scope = "col") Description
                            th(scope = "col") Added
                            th(scope = "col") Complete
                    tbody
                        each val in tasks
                            tr
                                td= val.name
                                td= val.desc
                                td= moment(val.created).format('M[/]D[/]YY[ ]h[:]mmA')
                                td
                                    a.btn.btn-primary(href="./deleteTask/" + val._id) Complete

